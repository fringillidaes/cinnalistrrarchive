@model DeleteListViewModel
@{
    ViewData["Title"] = "Delete List";
}

<h2>@ViewData["Title"]</h2>
<h3>@ViewData["Message"]</h3>


<div class="row">
    <div class="col-md-offset-3 col-md-6">
        <div class="alert alert-danger" role="alert">
            <form asp-action="Delete" method="post">
                <p>Do you really want to delete the list <code>@Model.Name</code> which currently contains <code>@Model.Items</code> items?</p>
                <p>THIS WILL DELETE THE LIST FROM Listrr AND TRAKT!</p>

                @Html.HiddenFor(x => x.Id)

                <button type="submit" class="btn btn-danger">Yes, I am sure!</button>
            </form>
        </div>
    </div>
</div>